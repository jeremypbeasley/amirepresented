.HeroImgContainer {
  background: url(_img/people_only.png);
  background-repeat: no-repeat;
  background-size: 100%;
  height: 35vh;
  width: 100%;
}
@media laptop {
  .HeroImgContainer {
    background: url("_img/people_flag.png") no-repeat;
    background-position: center center;
    background-size: cover;
    height: 100vh;
    width: 50%;
    float: left;
  }
}
.ContentContainer {
  background: #FF3700;
  height: 100vh;
  overflow: scroll;
}
@media laptop {
  .ContentContainer {
    height:100vh;
    width: 50%;
    position: relative;
    float: right;
    padding: 0 0 0 11rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
}
.TinyLogo{
  background-image: url("_img/logo.svg");
  background-repeat: no-repeat;
  background-size: 100%;
  height:18px;
  width: 26px;
  position: relative;
  top: 4rem;
  left: 4rem;
}
label {
  display: block;
  margin: 4rem 4rem 0 4rem;
  font-size: 1.5rem;
}
@media laptop {
  label {
    margin: 7rem 4rem 0 4rem;
  }
}
.InputZip {
  margin: 0 2rem 0 4rem;
  border: none;
  background: #FF3700;
  border-bottom: 1px solid white;
  height: 3rem;
  width: 21rem;
  font-size: 1.5rem;
  color: white;
}
.SubmitZip {
  background: white;
  border: none;
  border-radius: 5px;
  color: #ff3700;
  height: 3.5rem;
  width: 6.5rem;
  font-size: 1.5rem;
}
.LandingPageQuote {
  margin: 10rem 4rem 0 4rem;
}
  @media laptop {
    .LandingPageQuote {
      width: 60%;
      margin: 8rem 4rem 0 4rem;
    }
  }
.SiteCredit {
  margin: 6rem 14rem 0 6rem;
  width: 50%;
}
  @media laptop {
    .SiteCredit {
      width: 75%;
    }
  }
.BorderBottomBlack {
  border-bottom: 1px solid #000;
  padding: 0 0 2px 0;
}
.ImgGitHub {
  height: 18px;
  width: 18px;
  text-align: center;
  background-position: center center;
  position: relative;

}
@media laptop {
  .ImgGitHub {
    top: 3px;
    margin: 0 0 0 2rem;
  }
}
