// CITY AND STATE HEADING

.OverlayCityContainer {
  position: relative;
  width: calc(100% - unit6);
  margin: unit3;
  height: 3rem;
  border-bottom: 1px solid #000;
  font-size: 1.3rem;
}
  @media laptop {
