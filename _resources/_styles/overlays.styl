.Overlay {
  height: 100vh;
  width: 100vw;
  background: white;
  position: fixed;
  overflow: hidden;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  left: 0;
  top: 0;
  z-index: 999;
  transition: all 100ms ease-out;
  box-shadow: 0px 0px 126px 0px rgba(0,0,0,0.7);
  opacity: 0;
  //transform: translateX(100px);
  display: none;
}
@media laptop {
  .Overlay {
    width: 50vw;
    left: 50vw;
  }
}
.Overlay.Active {
  opacity: 1;
  //transform: translateX(0px);
}
.OverlayContent {
  margin: 3rem 0 0 0;
  padding-bottom: 6rem;
}
  @media laptop {
    .OverlayContent {
      margin: 5.5rem 0 0 0;
    }
  }
@media laptop {
  .OverlayScrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    background: black;
    height: 100vh;
    display: none;
    opacity: 0;
    transition: all 100ms ease-out;
  }
  .OverlayScrim.Active {
    opacity: .8;
  }
}

